<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Boogie">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="../build/jar/boogie.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="app.Boogie"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../bin/src"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/gdx-ai.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/gdx-backend-lwjgl-natives.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/gdx-backend-lwjgl.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/gdx-natives.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/gdx.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/jgit-3.4.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="../libs/jsch-0.1.51.jar"/>
        </jar>
    	<copy file="../boogie.cfg" tofile="../build/jar/boogie.cfg" />
    	<copy file="../background.png" tofile="../build/jar/background.png" />
    	<copy file="../build/run.bat" tofile="../build/jar/run.bat" />
    	<copy file="../build/run.sh" tofile="../build/jar/run.sh" />
    </target>
</project>
